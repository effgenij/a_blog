<div class="container">
  <div class="col-lg">
    <%= render 'shared/errors', obj: @category %>
    <div class="card text-center p-3 mb-3 shadow">
      <%= form_with(model: @category, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :name, "Category name", class: "col-form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter a name"  %>
        </div>
        <div class="form-group">
          <%= f.submit class: "btn btn-outline-primary btn-lg" %>
        </div>
      <% end %>
      <%= link_to '[ Cancel and return to categories listing ]', categories_path %>
    </div>
  </div>
</div>
<h1 class="text-center mt-4 mb-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for(@user, size: 200, class: "rounded shadow mx-auto d-block") %>

<% if logged_in? %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-primary" if @user == current_user %>
    <%= link_to "Delete profile", @user, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-outline-danger" if @user == current_user %>
  </div>
<% end %>

<h3 class="text-center mt-4 mb-4">Articles</h3>

<div class="d-flex justify-content-center mt-2">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>

<%= render 'articles/article' %>

<div class="d-flex justify-content-center mt-2">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>


<h1 class="text-center mt-4 mb-4">Log in</h1>

<div class="container">
  <div class="col-lg">
    <div class="card text-center p-3 mb-3 shadow">
      <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "col-form-label" %>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: "col-form-label" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
        <div class="form-group">
          <%= f.submit "Log in", class: "btn btn-outline-primary btn-lg" %>
        </div>
      <% end %>
      <%= link_to '[ Cancel and return to articles listing ]', articles_path %>
    </div>
  </div>
</div>


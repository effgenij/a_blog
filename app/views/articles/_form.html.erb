<div class="container">
  <div class="col-lg">
    <div class="card text-center p-3 mb-3 shadow">
      <%= form_with(model: @article, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :title, class: "col-form-label" %>
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article"  %>
        </div>
        <div class="form-group"> 
          <%= f.label :description, class: "col-form-label" %>
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article" %>
        </div>  
        <div class="form-group">
          <%= f.submit class: "btn btn-outline-primary btn-lg" %>
        </div>
      <% end %>
      <%= link_to '[ Cancel and return to articles listing ]', articles_path %> 
    </div>
  </div>
</div>

